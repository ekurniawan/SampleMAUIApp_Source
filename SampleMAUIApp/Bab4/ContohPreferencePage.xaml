<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMAUIApp.Bab4.ContohPreferencePage"
             Title="ContohPreferencePage">
    <VerticalStackLayout>
        <Label Text="Bahasa yang digunakan :" />
        <Entry x:Name="entryBahasa" Text="Set Preference" />
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnSetPReference" Text="Set Preference" 
                        Clicked="btnSetPReference_Clicked" />
            <Button x:Name="btnClearPreference" Text="Clear Preference" 
                        Clicked="btnClearPreference_Clicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>