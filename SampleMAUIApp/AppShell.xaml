<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SampleMAUIApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleMAUIApp"
    Shell.FlyoutBehavior="Flyout"
    Title="SampleMAUIApp">

    <ShellContent  
        Title="Main Page"  
        ContentTemplate="{DataTemplate local:Bab4.MainPageNav}" />

    <ShellContent  Route="detailpage" 
        Title="Detail Page"  
        ContentTemplate="{DataTemplate local:Bab4.DetailPageNav}" />

    <ShellContent  Route="navigation1" 
        Title="Hierarchical Navigation"  
        ContentTemplate="{DataTemplate local:Bab4.NavigationPage1}" />

    <ShellContent  Route="employeemanage" 
      Title="Manage Employees"  
      ContentTemplate="{DataTemplate local:Bab5.ManageEmployee}" />

    <ShellContent  Route="todolist" 
       Title="Todo List"  
       ContentTemplate="{DataTemplate local:Bab6.TodoListPage}" />


</Shell>
